{
	"name": "infocompass-backend",
	"version": "1.0.0",
	"description": "",
	"main": "setup.js",
	"dependencies": {
		"bluebird": "^3.7.2",
		"body-parser": "^1.19.2",
		"deployd": "^1.2.0",
		"express": "^4.17.1",
		"forever": "^4.0.1",
		"fs-extra": "^10.0.0",
		"markdown-it": "^12.3.2",
		"mongodb": "^3.6.6",
		"node-fetch": "^2.6.1",
		"nodemailer": "^6.6.0",
		"request": "^2.88.0",
		"request-promise": "^4.2.2",
		"sanitize-html": "^2.3.3"
	},
	"scripts": {
		"setup": "node setup.js",
		"start-production": "forever start dpd/production.js",
		"start-public-api": "forever start public_api/public_api.js",
		"stop-production": "forever stop dpd/production.js",
		"stop-public-api": "forever stop public_api/public_api.js",
		"mongodump": "mongodump --host 127.0.0.1:$(node config.js db.port) --username=$(node config.js db.credentials.username) --password=$(node config.js db.credentials.password) --db=$(node config.js db.name)",
		"mongorestore": "mongorestore --host 127.0.0.1:$(node config.js db.port) --username=$(node config.js db.credentials.username) --password=$(node config.js db.credentials.password) --db=$(node config.js db.name)",
		"postinstall": "cd dpd && npm install"
	},
